{
  "manifest_version": 3,
  "name": "SEO Analyzer by Slim SEO",
  "version": "1.0.1",
  "description": "Analyze your page and provide a SEO report.",
  "browser_specific_settings": {
    "gecko": {
      "id": "seo-analyzer@wpslimseo.com"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_title": "SEO Analyzer by Slim SEO",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}